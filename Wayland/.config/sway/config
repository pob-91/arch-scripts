include /etc/sway/config.d/*

## Key Bindings

bindsym $mod+l exec swaylock --image ~/Pictures/wallpapers/background.jpg --clock --indicator --indicator-radius 100 --indicator-thickness 7 --effect-blur 7x5 --effect-vignette 0.5:0.5 --ring-color bb00cc --key-hl-color 880033 --line-color 00000000 --inside-color 00000088 --separator-color 00000000 --grace 2 --fade-in 0.2

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86MonBrightnessUp exec lux -c acpi_video0 -a 5%
bindsym XF86MonBrightnessDown exec lux -c acpi_video0 -s 5%

bindsym $mod+Shift+s exec grim -g "$(slurp)" - | swappy -f -
bindsym $mod+Shift+w exec $term -e wf-recorder -g "$(slurp)" --audio --file ~/Videos/recording-"$(date +"%Y-%m-%d--%H:%M:%S")".mp4

## Floating Windows
for_window [class=".*"] resize set 640 480
for_window [class=".*"] move position center

for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [class="Zoom" instance="zoom"] floating enable

## Java issues fix

exec wmname "LG3D"

## GTK3 applications take a long time to start
exec systemctl --user import-enviromment DISPLAY WAYLAND_DISPLAY SWAYSTOCK
exec hash dbus-update-activation-environment 2>/dev/null && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSTOCK

## Launch Programms

seat * hide_cursor when-typing enable
exec --no-startup-id dbus-launch dunst --config ~/.config/dunst/dunstrc
exec --no-startup-id blueman-applet
exec --no-startup-id 'nm-applet --indicator'

